{
	"name": "@arranger/schema-builder",
	"version": "0.1.0",
	"description": "GraphQL schema building utilities for Arranger",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.release.json",
		"build:watch": "tsc -p tsconfig.release.json --watch",
		"clean": "rm -rf dist",
		"dev": "tsx --watch src/index.ts",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"graphql": "^16.8.1"
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.0",
		"@types/node": "^20.10.0",
		"typescript": "^5.3.0",
		"tsx": "^4.6.0",
		"jest": "^29.7.0",
		"@types/jest": "^29.5.8",
		"ts-jest": "^29.1.0"
	},
	"files": [
		"dist"
	]
}